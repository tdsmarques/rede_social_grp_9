@{
    ViewData["Title"] = "Comment Page";
    Layout = "~/Views/Shared/_LayoutPost.cshtml";
}

@model RedeSocial.Web.ViewModel.Post.PostViewModel

<div class="row">
    <!-- post start -->
    <div class="col-md-12 grid-margin">
        <div class="card rounded">
            <form asp-action="Post" class="form-login" asp-controller="Home" method="post" enctype="multipart/form-data">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="posts-tab" data-toggle="tab" href="#posts" role="tab" aria-controls="posts" aria-selected="true">
                                Criar Postagem
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="images-tab" data-toggle="tab" role="tab" aria-controls="images" aria-selected="false" href="#images">Foto</a>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="posts" role="tabpanel" aria-labelledby="posts-tab">
                            <div class="form-group">
                                <label class="sr-only" for="message">post</label>
                                <textarea class="form-control" asp-for="Message" id="message" rows="3" placeholder="O que esta pensando hoje?"></textarea>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="images" role="tabpanel" aria-labelledby="images-tab">
                            <div class="form-group">
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" name="File"  ID="file" accept="image/jpeg">
                                    <label class="custom-file-label" for="customFile"></label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex">
                        <button type="submit" class="btn btn-sm btn-primary float-right">Postar</button>
                    </div>
                    <span class="alert-danger" asp-validation-for="Message"> </span>
                </div>
            </form>
        </div>
    </div>
</div>